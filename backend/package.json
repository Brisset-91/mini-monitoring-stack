{
  "name": "comentarios-api-dynamodb",
  "version": "1.0.0",
  "description": "API de comentarios con DynamoDB y LocalStack",
  "main": "backend/server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand --detectOpenHandles",
    "localstack:up": "docker-compose up -d",
    "localstack:down": "docker-compose down",
    "terraform:init": "cd ../terraform-local-demo && terraform init",
    "terraform:plan": "cd ../terraform-local-demo && terraform plan",
    "terraform:apply": "cd ../terraform-local-demo && terraform apply -auto-approve",
    "terraform:destroy": "cd ../terraform-local-demo && terraform destroy -auto-approve",
    "setup": "npm run localstack:up && sleep 5 && npm run terraform:apply",
    "cleanup": "npm run terraform:destroy && npm run localstack:down"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
